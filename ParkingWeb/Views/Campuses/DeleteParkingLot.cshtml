@model ParkingWeb.Data.Entities.ParkingLot

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Eliminar</h1>
<h3 class="text-danger text-center">¿Esta seguro que desea eliminar este Parqueadero?</h3>
<div class="mt-4">
    <partial name ="_ParkingLotDetails"/>
    <div class="mt-4 text-center">
        <form asp-action="DeleteParkingLot">
            <input type="hidden" asp-for="Id" />
            <button input type="submit" value="Eliminar" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Eliminar</button>
            <a asp-action="Details" asp-route-id="@Model.Campus.Id" class="btn btn-dark"><i class="fa-solid fa-rotate-left"></i> Regresar</a>
        </form>

    </div>
</div>
