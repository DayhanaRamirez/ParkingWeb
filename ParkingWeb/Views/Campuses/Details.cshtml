@model ParkingWeb.Data.Entities.Campus

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<h1 class="text-center">Detalles</h1>

<div>
    <partial name="_CampusDetails" />
</div>
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i> Editar campus</a>
    <a asp-action="AddParkingLot" asp-route-id="@Model?.Id" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i> Agregar tipo de parqueadero</a>
    <a asp-action="Index" class="btn btn-dark"><i class="fa-solid fa-arrow-rotate-left"></i> Regresar</a>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Tipos de parqueadero</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ParkingLots.FirstOrDefault().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ParkingLots.FirstOrDefault().ParkingCellsNumber)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ParkingLots)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParkingCellsNumber)
                                </td>
                                <td>
                                    <a asp-action="DetailsParkingLot" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-info"></i></a>
                                    <a asp-action="EditParkingLot" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen"></i></a>
                                    <a asp-action="DeleteParkingLot" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [5, 25, 50, 100, 200, -1],
                [5, 25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
}

