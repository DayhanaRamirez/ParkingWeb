@model ParkingWeb.Models.EditUserViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Editar usuario</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="ChangeUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <partial name="_User" />

            <div class="form-group mt-2 text-center">
                <button input type="submit" value="Guardar" class="btn btn-outline-primary"><i class="fa-solid fa-floppy-disk"></i> Guardar</button>
                <a asp-action="ChangePassword" class="btn btn-outline-secondary"><i class="fa-solid fa-gear"></i> Cambiar Contraseña</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Model.ImageFullPath" style="width:200px;height:200px;border-radius:50%" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
