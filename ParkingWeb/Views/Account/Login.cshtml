@model ParkingWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <div class="card bg-info mb-3" style="width: 450px; height: 380px">
            <h3 class="card-header text-center"><i class="fa-solid fa-location-pin"></i> Iniciar Sesión</h3>
            <div class="card-body bg-light">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 text-left">
                        <div class="form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="RememberMe" class="text-warning"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <button input type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-user-large"></i> Iniciar Sesión</button>
                        <a asp-action="Register" class="btn btn-outline-secondary"><i class="fa-solid fa-user-plus"></i> Registrar Nuevo Usuario</a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-transparent text-center text-dark">
                <a asp-action="RecoverPassword" class="btn btn-link"> ¿Has olvidado tu contraseña?</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
    </div>
</div>


@section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        }
